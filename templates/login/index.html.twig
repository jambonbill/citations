{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
        
    <nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Citations Backoffice</a>
</nav>
    

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="form-signin">        
                
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                
                <label for="username" class="sr-only">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"  class="form-control" placeholder="email" required autofocus>

                
                <label for="password" class="sr-only">Password:</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="password" required>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
                <hr>
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </form>

        <div class="form-signin">
<pre>test users:<hr />
admin@citations.fr - 1234
moderator@citations.fr - 1234</pre>
        </div>

            
        
<style>
.form-signin {
    width: 100%;
    max-width: 330px;
    padding: 2rem;
    margin: auto;
    margin-top:2rem;
    background-color:#e0e0e0;
}
</style>
{% endblock %}